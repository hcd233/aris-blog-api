{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Aris-Blog-API",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "envFile": "${workspaceFolder}/api.env",
            "args": ["server", "start", "--host", "0.0.0.0", "--port", "8080"],
        },
        {
            "name": "Aris-Blog-Migrate",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "envFile": "${workspaceFolder}/api.env",
            "args": ["database", "migrate"],
        }
    ]
}